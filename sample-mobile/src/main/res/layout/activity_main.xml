<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="com.github.droibit.messenger.sample.MainActivity">

    <Button
        android:text="Send Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendMessage" />

    <Button
        android:text="Send Message(Strict)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStrictSendMessage" />

    <Button
        android:text="Send Error Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendErrorMessage" />

    <Button
        android:text="Send Error Message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendErrorMessage2" />

    <Button
        android:text="Send Success Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendSuccessMessage" />

    <Button
        android:text="Obtain Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onObtainMessage" />

    <Button
        android:text="Send message with Capability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendMessageWithCapability" />

    <Button
        android:text="Get connected nodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onGetConnectedNodes"
        />

</LinearLayout>
