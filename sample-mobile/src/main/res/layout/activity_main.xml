<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="com.github.droibit.messenger.sample.MainActivity">

    <Button
        android:text="SEND MESSAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendMessage" />

    <Button
        android:text="SEND ERROR MESSAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendErrorMessage" />

    <Button
        android:text="SEND ERROR MESSAGE2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendErrorMessage2" />

    <Button
        android:text="SEND SUCCESS MESSAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendSuccessMessage" />

    <Button
        android:text="SEND MESSAGE WITH RECEIVE MESSAGE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSendMessageWithReceiveMessage" />

</LinearLayout>
