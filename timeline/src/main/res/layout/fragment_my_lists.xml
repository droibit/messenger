<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="loadingInProgress"
            type="Boolean" />
    </data>

    <androidx.wear.widget.SwipeDismissFrameLayout
        android:id="@+id/swipeDismissLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="@{loadingInProgress ? View.GONE : View.VISIBLE}"
            tools:listitem="@layout/list_item_user_list"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="@{loadingInProgress ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/progressMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="@color/white"
                android:text="@string/progress_loading_content"
                tools:text="@string/progress_loading_content" />

        </LinearLayout>

    </androidx.wear.widget.SwipeDismissFrameLayout>
</layout>