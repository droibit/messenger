<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_nav_graph"
    tools:ignore="InvalidNavigation,UnusedNavigation">

    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.droibit.looking2.timeline.ui.content.TimelineFragment"
        android:label="Timeline"
        tools:layout="@layout/fragment_timeline">
        <argument
            android:name="source"
            app:argType="com.droibit.looking2.timeline.ui.content.TimelineSource" />
        <action
            android:id="@+id/showPhotos"
            app:destination="@id/photoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.droibit.looking2.timeline.ui.content.photo.PhotoFragment"
        android:label="Photo"
        tools:layout="@layout/fragment_photo">
        <argument
            android:name="urls"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/myListsFragment"
        android:name="com.droibit.looking2.timeline.ui.content.mylist.MyListsFragment"
        android:label="My List"
        tools:layout="@layout/fragment_my_lists">
        <action
            android:id="@+id/showMyListTimeline"
            app:destination="@id/timelineFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>