<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="contentPadding"
            type="com.droibit.looking2.ui.common.view.ShapeAwareContentPadding" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addAccountButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_marginBottom="@{contentPadding.lastItemBottomPx}"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@{contentPadding.leftPx}"
        android:paddingTop="8dp"
        android:paddingEnd="@{contentPadding.rightPx}"
        android:paddingBottom="4dp"
        tools:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/addAccountButtonIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_account"
            android:clickable="false"
            android:background="@drawable/background_circle_light"
            android:scaleType="center"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/addAccountButtonLabel"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <TextView
            android:id="@+id/addAccountButtonLabel"
            style="@style/Widget.Looking.TextView.InlineActionButtonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/account_account_list_add"
            app:layout_constraintStart_toEndOf="@+id/addAccountButtonIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>