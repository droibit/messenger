<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigationTweet"
    app:startDestination="@id/tweetChooserFragment">

    <fragment
        android:id="@+id/tweetChooserFragment"
        android:name="com.droibit.looking2.tweet.ui.chooser.TweetChooserFragment"
        tools:layout="@layout/fragment_tweet_chooser" >
        <action
            android:id="@+id/toKeyboardTweet"
            app:destination="@id/keyboardTweetFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
        <action
            android:id="@+id/toVoiceTweet"
            app:destination="@id/voiceTweetFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
    </fragment>
    <fragment
        android:id="@+id/keyboardTweetFragment"
        android:name="com.droibit.looking2.tweet.ui.input.keyboard.KeyboardTweetFragment"
        tools:layout="@layout/fragment_tweet_keyboard" />
    <fragment
        android:id="@+id/voiceTweetFragment"
        android:name="com.droibit.looking2.tweet.ui.input.voice.VoiceTweetFragment"
        tools:layout="@layout/fragment_tweet_voice" />
</navigation>